{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
    }
  },
  "pages": [
    {
      "path": "pages/home/home",
      "style": {}
    },
    {
      "path": "pages/my/my",
      "style": {}
    },
    {
      "path": "pages/cart/cart",
      "style": {}
    },
    {
      "path": "pages/cate/cate",
      "style": {}
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "石油商场",
    "navigationBarBackgroundColor": "#efd34a",
    "backgroundColor": "#ef4a4b"
  },
  "subPackages": [
    {
      "root": "subpkg",
      "pages": [
        {
          "path": "good_detail/good_detail",
          "style": {
            "navigationBarTitleText": "",
            "enablePullDownRefresh": false
          }
        },
        {
          "path": "goods_list/goods_list",
          "style": {
            "onReachBottomDistance": 150,
            "enablePullDownRefresh": true
          }
        },
        {
          "path": "search/tosearch",
          "style": {}
        }
      ]
    }
  ],
  "tabBar": {
    "selectedColor": "#f73636",
    "backgroundColor": "#fdfdfd",
    "list": [
      {
        "pagePath": "pages/home/home",
        "text": "首页",
        "iconPath": "static/tabs/home.png",
        "selectedIconPath": "static/tabs/home-o.png"
      },
      {
        "pagePath": "pages/cate/cate",
        "text": "分类",
        "iconPath": "static/tabs/category.png",
        "selectedIconPath": "static/tabs/category-o.png"
      },
      {
        "pagePath": "pages/cart/cart",
        "text": "购物车",
        "iconPath": "static/tabs/cart.png",
        "selectedIconPath": "static/tabs/cart-o.png"
      },
      {
        "pagePath": "pages/my/my",
        "text": "购物车",
        "iconPath": "static/tabs/my.png",
        "selectedIconPath": "static/tabs/my-o.png"
      }
    ]
  }
}